@using CapaEntidades;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutMantenedores.cshtml";
    EntCuenta cuenta = (EntCuenta)ViewBag.Cuenta;
}

<!-- Header -->

<header class="header">
    <div class="header_content d-flex flex-column align-items-center justify-content-lg-end justify-content-center">

        <!-- Logo -->
        <div class="logo"><a href="#"><img class="logo_1" src="~/Bootstrap/images/logo.png" alt=""><img class="logo_2" src="~/Bootstrap/images/logo_2.png" alt=""><img class="logo_3" src="~/Bootstrap/images/logo_3.png" alt=""></a></div>

        <!-- Main Nav -->
        <nav class="main_nav">
            <ul class="d-flex flex-row align-items-center justify-content-start">
                <li>@Html.ActionLink("Habitación", "listarHabitaciones", "MantenedorHabitaciones", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Mantenedor Huesped", "listarHuesped", "MantenedorHuesped", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Servicios Adicionales", "listarServicios", "MantenedorServicios", null, new { @class = "page-scroll" })</li>
                <li>@Html.ActionLink("Tipo de Habitación", "listarTiposH", "MantenedorTipoHabitacion", null, new { @class = "page-scroll" })</li>
            </ul>
        </nav>

        <!-- Social -->
        <div class="social header_social">
            <ul class="d-flex flex-row align-items-center justify-content-start">
                <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                <li><a href="#"><i class="fa fa-behance" aria-hidden="true"></i></a></li>
            </ul>
        </div>

        <!-- Header Right -->
        <div class="header_right d-flex flex-row align-items-center justify-content-start">

            <!--Login Status-->

            <div class="header_link"><a class="nav-link" href="#">@cuenta.NombreUsuario</a></div>
            <div class="header_link"><a class="nav-link" href="/Login/CerrarSesion">Cerrar Sesión</a></div>
            <!-- Hamburger Button -->
            <div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div>
        </div>
    </div>
</header>
