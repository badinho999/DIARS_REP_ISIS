
@{
    ViewBag.Title = "VerificarAcceso";
    Layout = "~/Views/Shared/_LayoutMantenedores.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title> Login </title>
</head>
    <body>
        <section class="container" id="login">
            @using (Html.BeginForm())
            {
                <div class="form-content m-auto form-horizontal col-5">
                    <h4>Login</h4>
                    <hr />
                    <div class="form-group">
                        <label class="control-label col-md-8">Nombre de usuario</label>
                        <div class="col-md-10">
                            <input type="text" name="txtNombreUsuario" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-8">Contraseña</label>
                        <div class="col-md-10">
                            <input type="password" name="txtPassword" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-md-offset-2 col-md-10">
                            <input type="submit" value="Entrar" class="btn btn-myBtn" />
                            <input type="reset" value="Otro" />
                        </div>
                    </div>
                </div>
                <p style="color: red">@ViewBag.mensaje</p>
            }
        </section>
    </body> 
</html>