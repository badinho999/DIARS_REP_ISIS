
@{
    ViewBag.Title = "VerificarAcceso";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}

<div class="container-fluid ">
    <div class="contenedor-form">
        <div class="toggle">
            <span>Crear Cuenta</span>
        </div>
        <div class="formulario">
            <h2>Iniciar Sesión</h2>
            <form action="/Login/VerificarAcceso" method="post">
                <input type="text" name="txtNombreUsuario" placeholder="Usuario" required />
                <input type="password" name="txtPassword" placeholder="Contraseña" required />
                <input type="submit" name="Iniciar Sesion" />
            </form>
        </div>

        <div class="formulario">
            <h2>Crea tu cuenta</h2>
            <form action="/Login/VerificarAcceso" method="post">
                <input type="text" placeholder="Usuario" required />
                <input type="password" placeholder="Contraseña" required />
                <input type="email" placeholder="Correo electrónico" required />
                <input type="text" placeholder="Teléfono" required />
                <input type="submit" placeholder="Registrarse" />
            </form>
        </div>
        <div class="reset-password">
            <a href="#">Olvide mi contraseña?</a>
        </div>
    </div>
</div>

