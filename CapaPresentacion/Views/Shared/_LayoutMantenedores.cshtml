<!DOCTYPE html>
<html lang="en">
<head>
    <title>Hotel ISIS @ViewBag.Title</title>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="Marimar Hotel template project">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    @*<link href="~/Bootstrap/styles/multi-select.css" rel="stylesheet" />*@
    @Styles.Render("~/bundles/mantenedorescss")
    @RenderSection("Header", false/*required*/)
</head>
<body>
    <header class="header">

        <div class="header_content d-flex flex-column align-items-center justify-content-lg-end justify-content-center">

            <!-- Logo -->
            <div class="logo"><a href="#"><img class="logo_1" src="~/Bootstrap/images/logo.png" alt=""><img class="logo_2" src="~/Bootstrap/images/logo_2.png" alt=""><img class="logo_3" src="~/Bootstrap/images/logo_3.png" alt=""></a></div>

            <!-- Main Nav -->
            <nav class="main_nav">
                <ul class="d-flex flex-row align-items-center justify-content-start">
                    <li>@Html.ActionLink("Alquilar", "BuscarReservaHuesped", "RealizarAlquiler", null, new { @class = "page-scroll" })</li>
                    <li>@Html.ActionLink("Habitación", "listarHabitaciones", "MantenedorHabitaciones", null, new { @class = "page-scroll" })</li>
                    <li>@Html.ActionLink("Servicios Adicionales", "listarServicios", "MantenedorServicios", null, new { @class = "page-scroll" })</li>
                    <li>@Html.ActionLink("Tipo de Habitación", "listarTiposH", "MantenedorTipoHabitacion", null, new { @class = "page-scroll" })</li>
                    <li>@Html.ActionLink("Editar reserva", "BuscarReserva", "MantenedorReserva", null, new { @class = "page-scroll" })</li>
                    <li>@Html.ActionLink("Reportes", "Reportes", "Reports", null, new { @class = "page-scroll" })</li>

                </ul>
            </nav>

            <!-- Social -->
            <div class="social header_social">
                <ul class="d-flex flex-row align-items-center justify-content-start">
                    <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                    <li><a href="#"><i class="fa fa-behance" aria-hidden="true"></i></a></li>
                </ul>
            </div>

            <!-- Header Right -->
            <div class="header_right d-flex flex-row align-items-center justify-content-start">

                <!--Login Status-->
                <div id="userInfo">

                </div>
                <!-- Hamburger Button -->
                <div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div>
            </div>
        </div>
    </header>

    <div class="super_container">

        <!-- Logo Overlay -->

        <div class="logo_overlay">
            <div class="logo_overlay_content d-flex flex-column align-items-center justify-content-center">
                <div class="logo"><a href="#"><img src="~/Bootstrap/images/logo_3.png" alt=""></a></div>
            </div>
        </div>

        <!-- Menu Overlay -->

        <div class="menu_overlay">
            <div class="menu_overlay_content d-flex flex-row align-items-center justify-content-center">

                <!-- Hamburger Button -->
                <div class="hamburger"><i class="fa fa-bars" aria-hidden="true"></i></div>

            </div>
        </div>

        <!-- Menu -->

        <div class="menu">
            <div class="menu_container d-flex flex-column align-items-center justify-content-center">

                <!-- Menu Navigation -->
                <nav class="menu_nav text-center">
                    <ul>
                        <li>@Html.ActionLink("Alquilar", "AlquilerMenu", "RealizarAlquiler", null, new { @class = "page-scroll" })</li>
                        <li>@Html.ActionLink("Habitación", "listarHabitaciones", "MantenedorHabitaciones", null, new { @class = "page-scroll" })</li>
                        <li>@Html.ActionLink("Servicios Adicionales", "listarServicios", "MantenedorServicios", null, new { @class = "page-scroll" })</li>
                        <li>@Html.ActionLink("Tipo de Habitación", "listarTiposH", "MantenedorTipoHabitacion", null, new { @class = "page-scroll" })</li>
                    </ul>
                </nav>

                <!-- Menu Social -->
                <div class="social menu_social">
                    <ul class="d-flex flex-row align-items-center justify-content-start">
                        <li><a href="#"><i class="fa fa-pinterest" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-facebook" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-twitter" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-dribbble" aria-hidden="true"></i></a></li>
                        <li><a href="#"><i class="fa fa-behance" aria-hidden="true"></i></a></li>
                    </ul>
                </div>

            </div>
        </div>

        <!-- Home -->

        <div class="home">
            <!-- Para cambiar la imagen, ir a main_styles.css, a la funcion .home y cambiar la ruta-->
            <div class="home_container d-flex flex-column align-items-center justify-content-center">
                <div class="home_title"><h1>Mantenedores</h1></div>
            </div>



        </div>
        <!-- Rooms -->
        <div id="limpiar">
            <div class="rooms_right container_wrapper">
                <div class="container">
                    <div class="row row-eq-height">
                        <!-- Rooms Image -->
                        <div class="col-xl-6 order-xl-1 order-2">
                            <div class="rooms_slider_container">
                                <div class="owl-carousel owl-theme rooms_slider">
                                    <!-- Slide -->
                                    <div class="slide">
                                        <div class="background_image" style="background-image:url(../../Bootstrap/images/rooms_1.jpg)"></div>
                                    </div>

                                    <!-- Slide -->
                                    <div class="slide">
                                        <div class="background_image" style="background-image:url(../../Bootstrap/images/rooms_1.jpg)"></div>
                                    </div>

                                    <!-- Slide -->
                                    <div class="slide">
                                        <div class="background_image" style="background-image:url(../../Bootstrap/images/rooms_1.jpg)"></div>
                                    </div>

                                </div>
                            </div>
                        </div>

                        <!-- Rooms Content -->
                        <div class="col-xl-6 order-xl-2 order-1">
                            <div class="rooms_right_content">
                                <div class="section_title">
                                    <div>Cuartos</div>
                                    <h1>Suit Matrimonial</h1>
                                </div>
                                <div class="rooms_text">
                                    <p>Disfruta un momento agradable con tu pareja en esta romántica suit</p>
                                </div>
                                <div class="rooms_list">
                                    <ul>
                                        <li class="d-flex flex-row align-items-center justify-content-start">
                                            <img src="~/Bootstrap/images/check.png" alt="">
                                            <span>Cama 2 Plazas Royal King</span>
                                        </li>
                                        <li class="d-flex flex-row align-items-center justify-content-start">
                                            <img src="~/Bootstrap/images/check.png" alt="">
                                            <span>Jacuzzi</span>
                                        </li>
                                        <li class="d-flex flex-row align-items-center justify-content-start">
                                            <img src="~/Bootstrap/images/check.png" alt="">
                                            <span>Agua Caliente & Cable con más de 200 canales</span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="rooms_price">S/.50.00/<span>Noche</span></div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>

            <!-- Rooms -->

            <div class="rooms_left container_wrapper">
                <div class="container">
                    <div class="row row-eq-height">

                        <!-- Rooms Content -->
                        <div class="col-xl-6">
                            <div class="rooms_left_content">
                                <div class="section_title">
                                    <div>Cuartos</div>
                                    <h1>Habitación Simple</h1>
                                </div>
                                <div class="rooms_text">
                                    <p>Un espacio solo para ti, disfruta de la mayor comodidad y servicios</p>
                                </div>
                                <div class="rooms_list">
                                    <ul>
                                        <li class="d-flex flex-row align-items-center justify-content-start">
                                            <img src="~/Bootstrap/images/check.png" alt="">
                                            <span>Cama de plaza y media</span>
                                        </li>
                                        <li class="d-flex flex-row align-items-center justify-content-start">
                                            <img src="~/Bootstrap/images/check.png" alt="">
                                            <span>Agua Caliente</span>
                                        </li>
                                        <li class="d-flex flex-row align-items-center justify-content-start">
                                            <img src="~/Bootstrap/images/check.png" alt="">
                                            <span>Cable con 50 canales</span>
                                        </li>
                                    </ul>
                                </div>
                                <div class="rooms_price">S/.30.00/<span>Noche</span></div>
                            </div>
                        </div>

                        <!-- Rooms Image -->
                        <div class="col-xl-6 order-xl-1 order-2">
                            <div class="rooms_slider_container">
                                <div class="owl-carousel owl-theme rooms_slider">
                                    <!-- Slide -->
                                    <div class="slide">
                                        <div class="background_image" style="background-image:url(../../Bootstrap/images/rooms_2.jpg)"></div>
                                    </div>

                                    <!-- Slide -->
                                    <div class="slide">
                                        <div class="background_image" style="background-image:url(../../Bootstrap/images/rooms_2.jpg)"></div>
                                    </div>

                                    <!-- Slide -->
                                    <div class="slide">
                                        <div class="background_image" style="background-image:url(../../Bootstrap/images/rooms_2.jpg)"></div>
                                    </div>

                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        


        @RenderBody()


        <!-- Footer -->

        <footer class="footer">
            <div class="container">
                <div class="row">
                    <div class="col">
                        <div class="footer_logo text-center">
                            <a href="#"><img src="~/Bootstrap/images/logo.png" alt=""></a>
                        </div>
                        <div class="footer_content">
                            <div class="row">
                                <div class="col-lg-4 footer_col">
                                    <div class="footer_info d-flex flex-column align-items-lg-end align-items-center justify-content-start">
                                        <div class="text-center">
                                            <div>Teléfono:</div>
                                            <div>+51 999 999 999</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 footer_col">
                                    <div class="footer_info d-flex flex-column align-items-center justify-content-start">
                                        <div class="text-center">
                                            <div>Dirección:</div>
                                            <div>San Isidro, I Etapa, Mz M, n° 14, Trujillo</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-lg-4 footer_col">
                                    <div class="footer_info d-flex flex-column align-items-lg-start align-items-center justify-content-start">
                                        <div class="text-center">
                                            <div>E-Mail:</div>
                                            <div>hotel.isis@gmail.com</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="footer_bar text-center">
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                            Copyright &copy;
                            <script>document.write(new Date().getFullYear());</script> Todos los derechos reservados | Esta Página web se hizo con <i class="fa fa-heart-o" aria-hidden="true"></i> <a href="https://colorlib.com" target="_blank">Colorlib</a>
                            <!-- Link back to Colorlib can't be removed. Template is licensed under CC BY 3.0. -->
                        </div>
                    </div>
                </div>
            </div>
        </footer>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
    @Scripts.Render("~/bundles/mantenedoresjs")
    @RenderSection("Scripts", false/*required*/)
</body>
</html>