@model IEnumerable<CapaEntidades.EntHuesped>

@{
    ViewBag.Title = "Huésped";
    Layout = "~/Views/Shared/_LayoutMantenedores.cshtml";
}
    <section class="container" id="listarHuesped">
        <div class="pb-4 form-header no-color">
            <a class="btn btn-secondary" href="/MantenedorHuesped/registrarHuesped">Nuevo huésped</a>
        </div>
        
        <table class="table m-auto col-10 table-striped table-dark">
            <tr>
                <th>
                    Apellidos
                </th>
                <th>
                    Email
                </th>
                <th>
                    Fecha de nacimiento
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    DNI
                </th>
                <th>
                    Actions
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellidos)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Fechadenacimiento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nombre)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dni)
                    </td>
                    <td class="options">
                        @Html.ActionLink("Editar", "editarHuesped", new { Dni = item.Dni }, new { @class = "link-master badge badge-primary" }) |
                        @Html.ActionLink("Eliminar", "eliminaHuesped", new { Dni = item.Dni }, new { @class = "link-master badge badge-danger" })
                    </td>
                </tr>
            }

        </table>
    </section>
