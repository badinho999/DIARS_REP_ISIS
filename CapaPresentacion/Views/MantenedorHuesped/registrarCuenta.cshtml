@model CapaEntidades.EntCuenta

@{
    ViewBag.Title = "registrarCuenta";
    Layout = "~/Views/Shared/_LayoutMantenedores.cshtml";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
<section class="container" id="listarHuesped">
    <div class="form-content m-auto form-horizontal col-5">
        <h4>Registrar cuenta</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-8">Nombre de usuario</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.NombreUsuario, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.NombreUsuario, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-8">Email</label>
            <div class="col-md-10">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <label class="control-label col-md-8">Contraseña</label>
            <div class="col-md-10">
                @Html.PasswordFor(model => model.PasswordAccount, new { htmlAttributes = new { @class = "form-control",placeholder="password" } })
                @Html.ValidationMessageFor(model => model.PasswordAccount, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-myBtn" />
                <a class="ml-1 btn btn-MyDanger" href="/MantenedorHuesped/listarHuesped">Cancelar</a>
            </div>
        </div>
    </div>
</section>
}
